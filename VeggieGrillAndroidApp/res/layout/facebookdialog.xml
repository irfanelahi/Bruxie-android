<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#fff" >

    <ImageView
        android:id="@+id/facebook_header"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/imagecontent"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/facebook_text_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/facebook_header"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:background="#0ff8"
        android:paddingLeft="5dp"
        android:text="Post to Your Wall"
        android:textColor="#000"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/facebook_text_mind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/facebook_text_post"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="4dp"
        android:background="#0ff8"
        android:paddingLeft="15dp"
        android:text="Message to Publish"
        android:textColor="#883"
        android:textSize="20dp" />

    <LinearLayout
        android:id="@+id/facebook_text_mind_lin"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/facebook_text_mind"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="8dp"
        android:focusable="true"
        android:focusableInTouchMode="true" >

        <EditText
            android:id="@+id/facebook_edit_message"
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:layout_marginLeft="0dp"
            android:hint=""
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="10dp"
            android:textColor="#000000"
            android:textSize="20dp" />
    </LinearLayout>
where is the reward bop

    <TextView
        android:id="@+id/facebook_text_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/facebook_text_mind_lin"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="4dp"
        android:background="#0ff8"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="@string/app_name"
        android:textColor="#883"
        android:textSize="18dp" />

    <ImageView
        android:id="@+id/facebook_nclex_icon"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_below="@+id/facebook_text_score"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/imagecontent"
        android:scaleType="fitXY"
        android:src="@drawable/icon_h" />

    <TextView
        android:id="@+id/facebook_text_via"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/facebook_text_score"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="13dp"
        android:layout_toRightOf="@+id/facebook_nclex_icon"
        android:background="#0ff8"
        android:text="@string/app_name"
        android:textColor="#883"
        android:textSize="22dp" />

    <Button
        android:id="@+id/facebook_but_publish"
        android:layout_width="91dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="120dp"
        android:layout_marginRight="20dp" />

    <Button
        android:id="@+id/facebook_but_skip"
        android:layout_width="63dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="120dp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/facebook_but_publish" />

</RelativeLayout>