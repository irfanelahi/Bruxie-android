<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@color/title_red" >

        <TextView
            android:id="@+id/topTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="MY REWARDS"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="10dp" />

       <RelativeLayout
           android:layout_width="50dp"
           android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
           android:id="@+id/backarrow"
           
           >
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:src="@drawable/btn_back" />

    </RelativeLayout>
    </RelativeLayout>
    

<RelativeLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/header"
   android:id="@+id/mainrel"
    >

<TextView
    android:id="@+id/text_sub_title"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="22dp"
    android:text="The BOLD FOLD CLUB"
    android:textColor="@android:color/black"
    android:textAppearance="?android:attr/textAppearanceLarge" />

<TextView
    android:id="@+id/text_sub_title2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/text_sub_title"
    android:layout_marginTop="5dp"
    android:layout_centerHorizontal="true"
    android:text="Fill the dots. Eat Bruxie" />

<ImageView
    android:id="@+id/reward2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignTop="@+id/reward1"
    android:layout_centerHorizontal="true"
    android:src="@drawable/rewards_dot_gray" />

<ImageView
    android:id="@+id/reward1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_below="@+id/text_sub_title2"
    android:layout_marginLeft="25dp"
    android:layout_marginTop="33dp"
    android:src="@drawable/rewards_dot_gray" />

<ImageView
    android:id="@+id/btn_promo_code"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
  android:layout_below="@+id/reward1"
  android:layout_marginTop="30dp"
    android:src="@drawable/rewards_btn_promocode" />

<View
    android:id="@+id/view1"
    android:layout_width="fill_parent"
    android:layout_height="10dp"
    android:background="@drawable/line_threecolors"
    android:layout_alignParentLeft="true"
    android:layout_below="@+id/btn_promo_code"
    android:layout_marginTop="16dp" />

<ImageView
    android:id="@+id/reward3"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="25dp"
    android:layout_above="@+id/btn_promo_code"
    android:layout_alignParentRight="true"
    android:src="@drawable/rewards_dot_gray" />

</RelativeLayout>
<LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            
            android:layout_below="@+id/mainrel"
            android:orientation="vertical" >

         
            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/rewards_bottom"
                android:layout_alignRight="@+id/rewards_bottom"
                android:layout_below="@+id/btn_promo_code"
            
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:scrollbars="none" >

                <LinearLayout
                    android:id="@+id/reward_list_parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical" />
            </ScrollView>
        </LinearLayout>


</RelativeLayout>
