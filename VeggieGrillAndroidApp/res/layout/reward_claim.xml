<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
<RelativeLayout
        android:id="@+id/signup_relative_header"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@color/title_red" >

        <TextView
            android:id="@+id/topTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="REDEEM REWARD"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="10dp" />

       <RelativeLayout
           android:layout_width="50dp"
           android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
           android:id="@+id/backarrow"
           
           >
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:src="@drawable/btn_back" />

    </RelativeLayout>
    </RelativeLayout>

    
    <TextView
        android:id="@+id/rewardText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signup_relative_header"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="REWARD"
        android:visibility="gone" />

    <TextView
        android:id="@+id/redeemDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/redeemBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:text="@string/redeem_desc" />

    <ImageView
        android:id="@+id/redeemBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:paddingBottom="35dp"
        android:src="@drawable/redeem_btn_redeemnow" />

    <ProgressBar
        android:id="@+id/pageLoadingIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:indeterminateDrawable="@drawable/progress_spinner"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/dotted_line"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/redeemDesc"
        android:layout_marginBottom="60dp"
        android:scaleType="fitXY"
        android:src="@drawable/line_threecolors" />

    <TextView
        android:id="@+id/rewardTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/redeemDesc"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="18dp"
        android:gravity="center"
         android:text="T-SHIRT" />

    <ImageView
        android:id="@+id/rewardimag"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_above="@+id/dotted_line"
        android:scaleType="fitXY"
        android:layout_below="@+id/signup_relative_header"
        android:layout_marginTop="14dp"
        android:src="@drawable/redeem_bg_img" />

</RelativeLayout>