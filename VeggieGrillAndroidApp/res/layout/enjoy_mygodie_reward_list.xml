<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/enjoy_mygodie_reward_list_parent_reward"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/rewards_list"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >

        <RelativeLayout
            android:id="@+id/rewardTitleLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/enjoy_mygodie_reward_list_text_date"
            android:paddingRight="5dp" >

            <TextView
                android:id="@+id/enjoy_mygodie_reward_list_text_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:ellipsize="end"
                android:gravity="left"
                android:maxLines="2"
                android:text="@string/takehome"
                android:textColor="#888" />

            <TextView
                android:id="@+id/enjoy_mygodie_reward_list_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/enjoy_mygodie_reward_list_text_title"
                android:gravity="left"
                android:text="@string/takehome"
                android:textColor="#888" />
        </RelativeLayout>

        <TextView
            android:id="@+id/enjoy_mygodie_reward_list_text_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="TEXT"
            android:textColor="#888"
            android:textSize="12dp" />
    </RelativeLayout>

</LinearLayout>